<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="style.css">
    <%- include('./partials/header') %>
    <title>Customer - Dashboard</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="cart-container">
      <center>
        <h1>Menu</h1>
      </center>
      <!-- Product Cards -->
      <% menu.forEach(product => { %>
        <div class="product-card" data-toggle="modal" data-target="#productModal" data-image="<%= product.menu_image %>" data-title="<%= product.menu_title %>" data-price="<%= product.menu_price %>">
          <img class="product-image" src="/foods/<%= product.menu_image %>" alt="<%= product.menu_title %>" />
          <div class="product-title"><%= product.menu_title %></div>
          <div class="product-price">$<%= product.menu_price %></div>
          <button class="add-to-cart-button" onclick="addToCart('<%= product.menu_id %>', '<%= product.menu_image %>', '<%= product.menu_title %>', '<%= product.menu_price %>')">Add to Cart</button>
        </div>

        <!-- Modal to Add to Cart to -->
    <div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="productModalLabel">Product Details</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <img id="modalProductImage" class="product-image" src="/foods/<%= product.menu_image %>" alt="<%= product.menu_title %>" />
            <div id="modalProductTitle" class="product-title"></div>
            <div id="modalProductPrice" class="product-price"></div>
            <label for="quantityInput">Quantity:</label>
            <input type="number" id="quantityInput" class="form-control" placeholder="Enter quantity" />
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="addToCart()">Add to Cart</button>
          </div>
        </div>
      </div>
    </div>
      <% }); %>
    </div>

    

    <%- include('./partials/footer') %>
    
     <script>
      function addToCart(image, title, price) {
        alert(`Added ${title} to Cart!`);
        $('#productModal').modal('hide');
      }
      $('.product-card').on('click', function () {
        const image = $(this).data('image');
        const title = $(this).data('title');
        const price = $(this).data('price');
        
        $('#modalProductImage').attr('src', image);
        $('#modalProductTitle').text(title);
        $('#modalProductPrice').text('Price: $' + price);
        $('#quantityInput').val('1');
      });
    </script>

  </body>
</html>
